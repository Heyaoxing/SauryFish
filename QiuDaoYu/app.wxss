/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.size-10{
  font-size:12px
}

.space{
  background: #f5f5f5;
  display:block;
  font-weight: 600;
  border: 1px solid #ddd;
  margin: -1px 0;
  padding:8rpx
}

.wa-item{
  width: 100%;
  border: 1px solid #ddd;
  margin: -1px 0;  
  font-size: 16px;
  display: block;
  color: #444;
  padding:10px;
  height: 40px;
  box-sizing: border-box;
  position:relative;
}


.pull-right{
  float: right;
}


.wa-mark{
  border-radius: 20px;
  padding: 2px 6px;
  font-size: 12px;
  
}

.wa-list{
  width:100%;
  position:relative;
}
/*background*/
 .wa-primary{
    border-color: #0c63ee;
    background-color: #387ef5;
    color: #fff;
}
 .wa-info {
    border-color: #0a9ec7;
    background-color: #11c1f3;
    color: #fff;
}
 .wa-success {
    border-color: #28a54c;
    background-color: #33cd5f;
    color: #fff;
}
 .wa-warning {
    border-color: #e6b400;
    background-color: #ffc900;
    color: #fff;
}
 .wa-danger {
    border-color: #e42012;
    background-color: #ef473a;
    color: #fff;
}
 .wa-dark {
    border-color: #111;
    background-color: #444;
    color: #fff;
}

/*input*/
.wa-input{
    display: block;
    height: 34px;
    color: #111;
    font-size: 14px;
    line-height: 16px;
    flex: 1;
}

.wa-input-icon{
  padding: 5px;
  padding-left: 44px;
  position: relative;
  border: 1px solid #ddd;
  border-radius: 3px;
}
.wa-input-icon .icon-left{
  text-align: center;
  position: absolute;
  top: 5px;
  left: 5px;
  width: 34px;
  height: 34px;
  line-height: 34px;
  font-size: 20px;
}
.placeholder-icon{
  color: #aaa;
}

.padding{
  padding:20rpx;
}